<script>
  import { Splide, type Options as SplideOptions } from "@splidejs/splide";
  import { Intersection } from "@splidejs/splide-extension-intersection";
  import { AutoScroll } from "@splidejs/splide-extension-auto-scroll";

  const optionsTtb: SplideOptions = {
    type: "loop",
    direction: "ttb",
    focus: "center",
    height: "80vh",
    width: "15%",
    autoWidth: true,
    arrows: false,
    gap: "5rem",
    perPage: 3,
    pagination: false,
    autoScroll: {
      speed: -1,
    },
  };

  const optionsBtt: SplideOptions = {
    type: "loop",
    direction: "ttb",
    focus: "center",
    height: "80vh",
    width: "15%",
    autoWidth: true,
    arrows: false,
    gap: "5rem",
    perPage: 3,
    pagination: false,
    autoScroll: {
      speed: 1,
    },
  };

  class C2TechsCarousel extends HTMLElement {
    splide: Splide | null = null;

    constructor() {
      super();
    }

    connectedCallback() {
      if (this.dataset.direction == "ttb") {
        this.splide = new Splide(this, optionsTtb);
      } else if (this.dataset.direction == "btt") {
        this.splide = new Splide(this, optionsBtt);
      } else {
        throw new Error("direction not valid");
      }
      this.splide.mount({ Intersection, AutoScroll });
    }

    disconnectedCallback() {
      this.splide?.destroy();
    }
  }
  window.customElements.define("c2dev-techs-carousel", C2TechsCarousel);
</script>
